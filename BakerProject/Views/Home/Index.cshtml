@{
    ViewData["Title"] = "Home Page";
}

@model List<HomeProduct>

<main>
    <div id="carouselExampleCaptions" class="w-100 carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators gap-3">
            <button type="button" data-bs-target="#carouselExampleCaptions"
                    style="border-radius: 50%; width: 3px; padding: 4px;" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions"
                    style="border-radius: 50%; width: 3px; padding: 4px;" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions"
                    style="border-radius: 50%; width: 3px; padding: 4px;" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/assets/images/h5-revolution-img-2.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <img src="~/assets/images/sliderinner1.png" alt="">
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/assets/images/home-5-slide-2.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <img src="~/assets/images/sliderinner2.png" alt="">
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/assets/images/home-5-slide-3.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <img src="~/assets/images/sliderinner3.png" alt="">
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" style="border-radius: 50px !important;" type="button"
                data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span style="padding: 30px !important;" class="carousel-control-prev-icon" aria-hidden="true"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                data-bs-slide="next">
            <span style="padding: 30px !important;" class="carousel-control-next-icon" aria-hidden="true"></span>
        </button>
    </div>
    <section id="design-delicious" class="pt-10">
        <div class="d-flex flex-column justify-content-sm-center align-items-sm-center text-sm-center">
            <div class="d-title d-flex flex-column justify-content-sm-center align-items-sm-center text-sm-center"
                 style="color: #303030;font-weight: 400;letter-spacing: 0px">
                <span>We design delicious</span>
            </div>
            <div style="width: 35%;" class="pt-4 d-text">
                <p class="fs-6 d-text">
                    Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed
                    diam
                    nonummy tincidunt ut laoreet
                    dolore magna aliquam erat volutpat.
                </p>
            </div>
        </div>
        <div class="container pt-5">
            <div class="row">
                <div class="col-sm-4">
                    <div class="d-flex flex-column align-items-sm-center justify-content-sm-center text-sm-center">
                        <img style="border-radius: 50%;" width="300" src="~/assets/images/img-round-1.jpg" alt="">
                        <div class="pt-3 d-text">
                            <h5 class="text-dark">CREATIVE ELEMENTS</h5>
                            <div class="pt-3 d-text">
                                <p style="color: #727272;" class="text-sm-center">
                                    Lorem ipsum dolor sit amet,
                                    consectetur adipiscing elit. Fusce eget risus in nisl
                                    dapibus fermentum vitae sed tortor. Ut hendrerit semper nulla.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="d-flex flex-column align-items-sm-center justify-content-sm-center text-sm-center">
                        <img style="border-radius: 50%;" width="300" src="~/assets/images/img-round-2.jpg" alt="">
                        <div class="pt-3">
                            <h5 class="text-dark">EASY COSTUMIZABLE</h5>
                            <div class="pt-3 d-text">
                                <p style="color: #727272;" class="text-sm-center">
                                    Lorem ipsum dolor sit amet,
                                    consectetur adipiscing elit. Fusce eget risus in nisl
                                    dapibus fermentum vitae sed tortor. Ut hendrerit semper nulla.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="d-flex flex-column align-items-sm-center justify-content-sm-center text-sm-center">
                        <img style="border-radius: 50%;" width="300" src="~/assets/images/img-round-3.jpg" alt="">
                        <div class="pt-3">
                            <h5 class="text-dark">ATTENTION TO DETAIL</h5>
                            <div class="pt-3 d-text">
                                <p style="color: #727272;" class="text-sm-center">
                                    Lorem ipsum dolor sit amet,
                                    consectetur adipiscing elit. Fusce eget risus in nisl
                                    dapibus fermentum vitae sed tortor. Ut hendrerit semper nulla.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    @if (Model != null && Model.Count > 0)
    {
            <section id="taste-of-romance" class="pt-10">
                <div class="d-flex flex-column justify-content-sm-center align-items-sm-center">
                    <div class="d-title" style="color: #303030;font-weight: 400;letter-spacing: 0px">
                        <span>Taste of romance</span>
                    </div>
                    <div style="width: 35%;" class="pt-4">
                        <p class="text-sm-center fs-6">
                            Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam
                            nonummy tincidunt ut laoreet
                            dolore magna aliquam erat volutpat.
                        </p>
                    </div>
                </div>

                    <div class="container pt-3">
                        <div class="row">
                    @foreach (var item in Model)
                    {
                                        <div class="col-sm-3 pt-5">
                                            <div class="d-flex flex-column align-items-sm-center justify-content-sm-center text-sm-center">
                                                <img style="border-radius: 50%;" width="300" src="~/assets/images/@item.Image" alt="">
                                                <div class="pt-3">
                                                    <h5 class="text-dark">@item.Title</h5>
                                                    <div class="pt-3">
                                                        <p style="color: #727272;" class="text-sm-center">
                                            @item.Description
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                    }
                        </div>
                    </div>
            </section>
    }
</main>